<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:services="services.*"
			   minWidth="955" minHeight="600"
			   creationComplete="application1_creationCompleteHandler(event)">
	<fx:Declarations>
		<s:CallResponder id="test1Result" result="test1Result_resultHandler(event)"/>
		<services:TESTHW id="tESTHW"
						 fault="Alert.show(event.fault.faultString + '\n' + event.fault.faultDetail)"
						 showBusyCursor="true"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import valueObjects.A;
			
			
			protected function application1_creationCompleteHandler(event:FlexEvent):void
			{
				test1('陈东,hello');
			}
			
			
			protected function test1(arg0:String):void
			{
				test1Result.token = tESTHW.test1(arg0);
			}
			
			protected function test1Result_resultHandler(event:ResultEvent):void
			{
				var a:A = event.result as A;
				
				Alert.show('a.b = \n' + a.b + '\n\nevent.message = ' + event.message+'');
			}
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
				test1('陈东,helloaaaa');
			}
			
			
		]]>
	</fx:Script>
	<s:Button label="tets" click="button1_clickHandler(event)"/>
</s:Application>
